num1  = int(input("Please choose a number: "))
num2 = int(input("Please choose another number: "))
num3 = int(input("Please choose your final number: "))



if num1 < num2:               #finding the least
    if num1 < num3:
        least = num1
    else:
        least = num3            
else:
    if num2 < num3:
        least = num2
    else:
        least = num3
        
        
if num1 > num2:                   #finding the greatest
    if num1 > num3:
        greatest = num1
    else:
        greatest = num3
else:
    if num2 > num3:
        greatest = num2
    else:
        greatest = num3
        
if num1 != least and num1 != greatest:         #finding other
    other = num1
elif num2 != least and num2 != greatest:
    other = num2
else:
    other = num3